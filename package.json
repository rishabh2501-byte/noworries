{
  "name": "ai-ui-design-validator",
  "version": "1.0.0",
  "description": "AI-powered UI Design Validator - Compare actual UI against Figma designs",
  "type": "module",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:api\"",
    "dev:react": "vite",
    "dev:api": "npx tsx src/server/api.ts",
    "dev:electron": "concurrently \"npm run dev:react\" \"npm run dev:api\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm run build:react",
    "build:react": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "cli": "ts-node src/cli/index.ts",
    "package": "electron-builder"
  },
  "bin": {
    "validate-ui": "./dist/cli/index.js"
  },
  "keywords": [
    "ui-testing",
    "figma",
    "design-validation",
    "visual-regression",
    "qa-automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "axios": "^1.6.7",
    "chroma-js": "^2.4.2",
    "commander": "^12.0.0",
    "cors": "^2.8.6",
    "electron-store": "^8.1.0",
    "express": "^5.2.1",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.1",
    "openai": "^4.28.0",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.41.2",
    "pngjs": "^7.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-router-dom": "^6.22.1",
    "zustand": "^4.5.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@types/chroma-js": "^2.4.4",
    "@types/node": "^20.11.19",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.4",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.3",
    "electron-builder": "^24.12.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.uivalidator.app",
    "productName": "AI UI Design Validator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
